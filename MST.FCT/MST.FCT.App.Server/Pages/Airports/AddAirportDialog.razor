<form>
    <div class="modal-body">
        <div class="form-row">
            <div class="form-group col">
                <label class="form-label">Airport Name</label>
                <input type="text" class="form-control" placeholder="">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col">
                <label class="form-label">Country</label>
                @if (Countries == null)
                {
                    <label class="form-label">Loading....</label>
                }
                else
                {
                    <select class="form-control">
                        <option value=""></option>
                        @foreach (var country in Countries)
                        {
                            <option value="@country.Id" class="background-image:url(/svgmaps/arg.svg)"> @country.Name </option>
                        }
                    </select>
                }
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col mb-0">
                <label class="form-label">IATA</label>
                <input type="text" class="form-control" placeholder="ABCD" maxlength="4">
            </div>
            <div class="form-group col mb-0">
                <label class="form-label">ICAO</label>
                <input type="text" class="form-control" placeholder="ABC" maxlength="3">
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save</button>
    </div>
</form>
