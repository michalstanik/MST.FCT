<EditForm Model="@Airport" OnValidSubmit="@HandleValidSubmit">

    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="modal-body">
        <div class="form-row">
            <div class="form-group col">
                <label class="form-label">Airport Name</label>
                <InputText class="form-control" @bind-Value="@Airport.Name" placeholder="" />
                <ValidationMessage For="@(() => Airport.Name)" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col">
                <label class="form-label">Country</label>
                @if (Countries == null)
                {
                    <label class="form-label">Loading....</label>
                }
                else
                {
                    <select class="form-control">
                        <option value=""></option>
                        @foreach (var country in Countries)
                        {
                            <option value="@country.Id" class="background-image:url(/svgmaps/arg.svg)"> @country.Name </option>
                        }
                    </select>
                }
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col mb-0">
                <label class="form-label">ICAO</label>
                <InputText class="form-control" @bind-Value="@Airport.ICAO" placeholder="ABCD" maxlength="4" />
                <ValidationMessage For="@(() => Airport.ICAO)" />
            </div>
            <div class="form-group col mb-0">
                <label class="form-label">IATA</label>
                <InputText class="form-control" @bind-Value="@Airport.IATA" placeholder="ABC" maxlength="3" />
                <ValidationMessage For="@(() => Airport.IATA)" />
            </div>
        </div>
    </div>
    <div class="modal-footer">
        @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</EditForm>
